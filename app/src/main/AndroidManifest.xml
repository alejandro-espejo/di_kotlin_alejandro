<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.di_to_do_list">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_calendar_24"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_calendar_24"
            android:supportsRtl="true"
            android:theme="@style/Theme.DI_To_Do_List">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.AddTaskActivity"/>
    </application>

</manifest>